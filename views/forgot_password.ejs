<!doctype html>
<html>
<head>
	<title>Forgot Password</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; }
	</style>
	<!-- messi message -->
	<!-- messi href links -->
        	    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
                <link href="/stylesheets/messi/messi.css" rel="stylesheet">
                <script src="/stylesheets/messi/messi.js"></script>
	<script>
    	jQuery.noConflict();
    	(function($) {
              $(document).ready(function() {
                new Messi('Enter your email address and we will send you a temporary password', {autoclose: 3000, center: false, viewport: {top: '70px', left: '500px'}});

                 });
        })(jQuery);
    </script>

</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Reset Password</h1>

	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/forgotpassword" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="email">
		</div>
		
		<button type="submit" class="btn btn-warning btn-lg">Submit</button>
	</form>

	<hr>

	<p>Remember password? <a href="/login">Login</a></p>
	<p>Or go <a href="/">home</a>.</p>

</div>
</div>
</body>
</html>